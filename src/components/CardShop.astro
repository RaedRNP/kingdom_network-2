---
export const prerender = false;
import getImg from "../utils/common/getImg";
let { product } = Astro.props;
---

<div
    class="h-[35rem] w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm flex justify-evenly flex-col product"
>
    <a href={`/item/${product?.documentId}`}>
        <img
            loading="lazy"
            class="p-8 rounded-t-lg"
            src={getImg(product.imagen?.url)}
            alt={"Product Image"}
        />
    </a>
    <div class="px-5 pb-5 flex justify-evenly flex-col">
        <a href={`/item/${product?.documentId}`}>
            <h5 class="text-xl font-semibold tracking-tight text-gray-900">
                {product.nombre}
            </h5>
        </a>
        <div class="flex items-center mt-2.5 mb-5">
            <div class="flex items-center space-x-1 rtl:space-x-reverse">
                <p class="text-sm">
                    {product?.descripcion}
                </p>
            </div>
        </div>
        <div class="flex items-center justify-between">
            <span class="text-3xl font-bold text-gray-900"
                >Ref: {product?.precio}</span
            >
            <a
                href={`/item/${product?.documentId}`}
                class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
                >Ordenar</a
            >
        </div>
    </div>
</div>
